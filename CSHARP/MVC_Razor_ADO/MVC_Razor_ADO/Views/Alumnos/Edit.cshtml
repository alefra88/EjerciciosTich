@using entities;
@using System.ComponentModel.DataAnnotations
@model Alumno
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-horizontal">
    <h2>Agregar Alumno</h2>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.nombre)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(m => m.nombre, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.primerApellido)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(m => m.primerApellido, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.segundoApellido)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(m => m.segundoApellido, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.fechaNacimiento)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(m => m.fechaNacimiento, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.curp)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(m => m.curp, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.correo)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(m => m.correo, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.telefono)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(m => m.telefono, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.sueldoMensual)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(m => m.sueldoMensual, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.idEstadoOrigen)
            </div>
            <div class="col-md-10">
                @Html.DropDownList("idEstado", new SelectList(ViewBag.Estados, "id", "nombre"), new { htmlAttributes = new { @class = "select" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.idEstatus)
            </div>
            <div class="col-md-10">
                @Html.DropDownList("EstatusAlumnos", new SelectList(ViewBag.EstatusAlumnos, "id", "nombre"), new { htmlAttributes = new { @class = "select" } })
            </div>
        </div>
        <button type="submit" class="btn">Registrar Alumno</button>

    }
</div>
